<!DOCTYPE html>
<html>
  <head>
    <title>ProductiveFamily</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>



          <%if seller_signed_in? %> 
              <ul>
                  <li>    <%= link_to "View Profile ", seller_path(current_seller) %> </li>
                  <li>    <%= link_to 'Log Out', destroy_seller_session_path, method: :delete %> </li>
                 
            <% else %>
                   <li> <%= link_to "Log in", new_seller_session_path %> </li>
                   <li> <%= link_to "Sign Up", new_seller_registration_path %> </li>
            <% end %> 
                </ul> 
          <%if user_signed_in? %> 
              <ul>
                  <li>    <%= link_to "View Profile user ", user_path(current_user) %> </li>
                  <li>    <%= link_to 'Log Out user', destroy_user_session_path, method: :delete %> </li>
                 
            <% else %>
                   <li> <%= link_to "Log in user", new_user_session_path %> </li>
                   <li> <%= link_to "Sign Up user", new_user_registration_path %> </li>
            <% end %> 
                </ul> 
<p> index & show users  JUST for us as an admin
  </p>
  <p></p>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
