<%if seller_signed_in?%>
  <%= render partial: 'seller_show' %>
<% else %>
  <h5>All Products by <%= @seller.name %>:</h5>
  <%= imdb_style_rating_for @seller, imdb_avg: true%>
   Rate: <%= rating_for @seller, "quality",disable_after_rate: true, imdb_avg: true, space: true,enable_half: true %>

  <% @seller.products.each do |product| %>
    <div class="row">
      <div class="col s4">
        <div class="card card-panel hoverable" >
          <div class="card-image">
            <%=  cl_image_tag product.image.url %>
          </div>
          <div class="content">
            <%= product.name %>
            <p> Price: <%= product.price %></p>
            <%#= product.items.quantity %>
            <% if @current_cart.seller_id == product.seller.id || @current_cart.seller_id.nil?%>
              <div>
                <button class="waves-effect #00695c teal darken-3 btn-small"> <%= button_to "Add #{product.name} to cart", items_path(:product_id => product.id) %></button></div>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
<% end %>
</div>
    </div>

