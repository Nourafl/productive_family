

<%if seller_signed_in?%>
  <%= render partial: 'seller_show' %>
  <% @seller.products.each do |p| %>
    <%= p.name %>
    <%= link_to 'Delete', product_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Edit', edit_product_path(p)%>
<%end %>
<% else %>
  <h3><%= @seller.id %></h3>


  <h5>All Products by the seller:</h5> 
  <div class="row">
  <% @seller.products.each do |product| %>
  <div class="col s8">
      <%= product.name %>
      <p> Price: <%= product.price %></p>
      <%=  cl_image_tag(product.image, :width => 70, :height => 70) %> 
      <%#= console %>
      <div><%= button_to "Add #{product.name} to cart", items_path(:product_id => product.id) %></div>
