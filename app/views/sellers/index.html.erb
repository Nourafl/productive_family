<div class = "serllerspage ">
  <div>
    <%= image_tag("default.png", :class => "intro") %>
  </div>
</div>
<h3 class="center"> All Stores </h3>
<% @sellers.each do |seller| %>
  <div class="row">
    <div class="col s4">
      <div class="card small card-panel hoverable" >
        <div class="card-image">
          <%=  image_tag(seller.img.url) %>
        </div>
        <%# <div class="card-content"> %>
        <%= seller.name %>
        <br>
        <%= seller.description %>
        <%#= imdb_style_rating_for seller, imdb_avg: true%>
        <%= rating_for seller, "quality", disable_after_rate: true, imdb_avg: true, space: true,enable_half: true, star_on: image_path("star-on.png"), star_off: image_path("star-off.png"), star_half: image_path("star-half.png") %>
        <div>
          <%= link_to 'More details', seller_path(seller) %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
