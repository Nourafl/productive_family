<div class = "serllerspage ">
  <div>
    <%= image_tag("default.png", :class => "intro") %>
  </div>
</div> 
<h3 class="center"> All Stores </h3>
  <% @sellers.each do |seller| %>
    <div class="row">
      <div class="col s4">
      <div class="card small card-panel hoverable" >
        <div class="card-image">
          <%=  image_tag(seller.img.url) %>
        </div>
        <div class="content"> 
        Name: <%= seller.name %>
        <br>
        Description: <%= seller.description %>
        <div>
          <%= link_to 'More details', seller_path(seller) %>
        </div> 
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

