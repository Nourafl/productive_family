<div class = "serllerspage ">
  <div>
    <%= image_tag("default.png", :class => "intro") %>
  </div>
</div>
<div class="services row  top-marging">
  <% @sellers.each do |seller| %>
    <div class="row">
      <%# <div class="col s4"> %>
      <div class="card small card-panel hoverable" >
        <div class="card-image">
          <%=  image_tag(seller.img.url) %>
        </div>
        <%# <div class="card-content"> %>
         <%= seller.name %>
        <br>
        <%= seller.description %>
        <%#= imdb_style_rating_for seller, imdb_avg: true%>
      
        <%= rating_for seller, "quality", disable_after_rate: true, imdb_avg: true, space: true,enable_half: true %>
      
        <div>
          <%= link_to 'More details', seller_path(seller) %>
        </div>
      </div>
      <%# </div> %>
    <% end %>
  </div>
</div>
