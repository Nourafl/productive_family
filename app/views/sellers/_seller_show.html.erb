<h1>Seller dashboard</h1>
<%= console %>
<h4> welcome <%= @seller.name %> </h4>
<% current_seller.orders.each do |order| %>
  <%#= order.id %>
  <%# <br> %>
  <%#= order.status %>
  <%# <br> %>
  <%= console %>
  <% order.items.each do |item |%>
    Order:
    <%= item.id %>
    <br>
    <%= item.product.name %>
    <br>
    <%= order.user.username %>
    <br>
    <%= order.user.address %>
  <% end%>
  <br>
<% end %>
<%= link_to 'add product', new_product_path	 %>
<br>
<% @seller.products.each do |p| %>
  <%= p.name %>
  <%= link_to 'Delete', product_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Edit', edit_product_path(p)%>
  <br>
<%end %>
